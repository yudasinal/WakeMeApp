<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
		    <stroke android:width="4dp" android:color="#ff4040" />
		    <padding android:left="4dp"
		        android:top="4dp"
		        android:right="4dp"
		        android:bottom="4dp" />
		    <corners android:radius="5dp" />
		    <solid android:color="#ffffffff" />
		</shape>
	</item>
    <item>
        <shape>
		    <stroke android:width="4dp" android:color="#fff963" />
		    <padding android:left="4dp"
		        android:top="4dp"
		        android:right="4dp"
		        android:bottom="4dp" />
		    <corners android:radius="5dp" />
		    <solid android:color="#ffffffff" />
		</shape>
	</item>
        
</selector>

