<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff6ea">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#fff6ea" >
	
	    <com.yljv.alarmapp.helper.SquareImageView
	        android:id="@+id/add_picture"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:src = "@drawable/screenshot_128"
	        android:background="@drawable/image_border"
	        android:clickable = "true"
	        android:scaleType="fitXY"
	        android:adjustViewBounds="true" />
	
	    <EditText
	        android:id="@+id/add_message"
	        android:layout_width="280dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_height="48dp"
	        android:hint="Add a Message"
	        android:background="@drawable/add_box"
	        android:ems="10"
	        android:textColor="#fa8b60"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
		    android:textColorHint="#90c5a9"
	        android:maxLength="140" >
	        
	        <requestFocus />
	    </EditText>
	
	</LinearLayout>
	
</ScrollView>
