<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
	    android:id="@+id/pic_layout"
	    android:layout_width="match_parent"
	    android:layout_height="69dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/background_list_item"
	    android:minHeight="70dp"
	    android:orientation="horizontal"
	    android:paddingLeft="10dp" >

	    <ImageView
	        android:id="@+id/set_picture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:contentDescription="image"
	        android:paddingLeft="20dp"
	        android:paddingRight="15dp"
	        android:src="@drawable/ic_action_new_picture" />

	    <RelativeLayout
	        android:id="@+id/relativeLayout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/partner_day"
	        android:layout_toLeftOf="@+id/set_picture"
	        android:layout_toRightOf="@+id/morning_evening"
	        android:gravity="center"
	        android:layout_marginLeft="15dp" >

	        <TextView
	            android:id="@+id/partner_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#90C5A9"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/partner_month"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/partner_date"
	            android:textColor="#90C5A9"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/partner_year"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/partner_month"
	            android:textColor="#90C5A9"
	            android:textSize="16sp" />
	    </RelativeLayout>

	    <TextView
	        android:id="@+id/morning_evening"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/partner_time"
	        android:layout_alignBottom="@+id/partner_time"
	        android:layout_toRightOf="@+id/partner_time"
	        android:paddingBottom="5dp"
	        android:text="@string/am"
	        android:textColor="#fa8b60"
	        android:textSize="14sp" />

	    <ProgressBar
	        android:id="@+id/progress"
	        style="?android:attr/progressBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="28dp" />

	    <TextView
	        android:id="@+id/partner_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/relativeLayout1"
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:paddingTop="15dp"
	        android:textColor="#90C5A9"
	        android:textSize="16sp" />

	    <TextView
	        android:id="@+id/partner_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/set_text"
	        android:paddingBottom="5dp"
	        android:textColor="#fa8b60"
	        android:textSize="32sp"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/set_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/relativeLayout1"
	        android:layout_alignParentRight="true"
	        android:contentDescription="image"
	        android:paddingLeft="20dp"
	        android:paddingRight="15dp"
	        android:paddingTop="20dp"
	        android:text="" 
	        android:textColor="#3f2860"/>

	</RelativeLayout>

</LinearLayout>
