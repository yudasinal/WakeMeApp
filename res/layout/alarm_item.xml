<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buyPortfolioLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:minHeight="70dp"
  android:paddingLeft="10dp"
  android:paddingTop="5dp"
  android:layout_marginLeft="20dp"
  android:layout_marginRight="20dp"
  android:layout_marginTop="20dp"
  android:background="@drawable/background_list_item">

       
    <TextView android:id="@+id/my_time"
	  android:textSize="22sp"
	  android:textStyle="bold"
	  android:layout_width="110dp"
	  android:layout_height="wrap_content"
	  android:paddingTop="5dp"
	  android:text = "Time"
	  android:textColor="#fa8b60"
	  />

   
  	<TextView android:id="@+id/my_text"
		  android:textSize="16sp"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:text = "Alarm"
		  android:layout_below="@id/my_time"
		  android:textColor="#fa8b60"
  	/>
  	
  	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginBottom="15dp"
	        android:layout_centerInParent="true"
	        android:textSize="20sp"
	        android:paddingTop="5dp"
	        android:paddingLeft="25dp" >
		    <TextView
		        android:id = "@+id/mon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="3dp"
		        android:textSize="18sp"
		        android:textColor="#90C5A9"
		        android:text="M "/>
		    <TextView
		        android:id = "@+id/tue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:layout_marginRight="3dp"
		        android:textColor="#90C5A9"
		        android:text="T "/>
		    <TextView
		        android:id = "@+id/wed"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:layout_marginRight="3dp"
		        android:textColor="#90C5A9"
		        android:text="W "/>
		    <TextView
		        android:id = "@+id/thu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:layout_marginRight="3dp"
		        android:textColor="#90C5A9"
		        android:text="T "/>
		    <TextView
		        android:id = "@+id/fri"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:layout_marginRight="3dp"
		        android:textColor="#90C5A9"
		        android:text="F "/>
		    <TextView
		        android:id = "@+id/sat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:layout_marginRight="3dp"
		        android:textColor="#90C5A9"
		        android:text="S "/>
		    <TextView
		        android:id = "@+id/sun"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#90C5A9"
		        android:textSize="18sp"
		        android:text="S "/>
		</LinearLayout>

  	
  	<ImageView android:id="@+id/set_alarm"
  	    android:contentDescription="image"
  	    android:layout_height="wrap_content"
  	    android:layout_width="wrap_content"
  	    android:layout_alignParentRight = "true"
  	    android:layout_centerVertical = "true"
  	    android:paddingRight="20dp"
  	    android:src = "@drawable/alarm_deactivated"
  	    />

	
</RelativeLayout>
</LinearLayout>


