<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android=
  "http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:minHeight="50dp"
  android:paddingLeft="10dp"
  android:paddingTop="5dp">

       
    <TextView android:id="@+id/my_time"
	  android:textSize="20sp"
	  android:textStyle="bold"
	  android:layout_width="110dp"
	  android:layout_height="wrap_content"
	  android:paddingBottom="5dp"
	  android:paddingTop="5dp"
	  android:text = "Time"
	  android:textColor="#90c5a9"
	  />

   
  	<TextView android:id="@+id/my_text"
		  android:textSize="16sp"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:text = "Alarm"
		  android:layout_below="@id/my_time"
		  android:textColor="#90c5a9"
  	/>
  	
  	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginBottom="15dp"
	        android:layout_centerInParent="true"
	        android:textSize="20sp"
	        android:paddingTop="5dp" >
		    <TextView
		        android:id = "@+id/mon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:textSize="20sp"
		        android:textColor="#7a9a95"
		        android:text="M "/>
		    <TextView
		        android:id = "@+id/tue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginRight="5dp"
		        android:textColor="#7a9a95"
		        android:text="T "/>
		    <TextView
		        android:id = "@+id/wed"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginRight="5dp"
		        android:textColor="#7a9a95"
		        android:text="W "/>
		    <TextView
		        android:id = "@+id/thu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginRight="5dp"
		        android:textColor="#7a9a95"
		        android:text="T "/>
		    <TextView
		        android:id = "@+id/fri"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginRight="5dp"
		        android:textColor="#ffc4a4"
		        android:text="F "/>
		    <TextView
		        android:id = "@+id/sat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginRight="5dp"
		        android:textColor="#7a9a95"
		        android:text="S "/>
		    <TextView
		        android:id = "@+id/sun"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#7a9a95"
		        android:textSize="20sp"
		        android:text="S "/>
		</LinearLayout>

  	
  	<ImageView android:id="@+id/set_alarm"
  	    android:contentDescription="image"
  	    android:layout_height="wrap_content"
  	    android:layout_width="wrap_content"
  	    android:layout_alignParentRight = "true"
  	    android:layout_centerVertical = "true"
  	    android:paddingRight="30dp"
  	    android:src = "@drawable/alarm_deactivated"
  	    />

	
</RelativeLayout>



