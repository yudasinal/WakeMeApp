<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android=
  "http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:minHeight="50dp"
  android:paddingLeft="10dp"
  android:paddingTop="5dp"
  android:background="@drawable/background_list_item"
  >

       
    <TextView android:id="@+id/my_time"
	  android:textSize="20sp"
	  android:textStyle="bold"
	  android:layout_width="110dp"
	  android:layout_height="wrap_content"
	  android:paddingBottom="5dp"
	  android:paddingTop="5dp"
	  android:text = "Time"
	  android:textColor="#ff4040"
	  />

   
  	<TextView android:id="@+id/my_text"
		  android:textSize="16sp"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:text = "Alarm"
		  android:layout_below="@id/my_time"
  	/>
  	
  	<TextView android:id="@+id/my_days"
  	    android:layout_width="match_parent"
  	    android:layout_height ="wrap_content"
  	    android:layout_centerInParent="true"
  	    android:gravity="center"
  	    android:layout_centerVertical="true"
  	    android:textSize="16sp"
  	    android:paddingLeft="10dp"
  	    android:text="M T W T F S S"
  	    android:textColor="#ffc4a4"
  	    />

  	
  	<ImageView android:id="@+id/set_alarm"
  	    android:contentDescription="image"
  	    android:layout_height="wrap_content"
  	    android:layout_width="wrap_content"
  	    android:layout_alignParentRight = "true"
  	    android:layout_centerVertical = "true"
  	    android:paddingRight="30dp"
  	    android:src = "@drawable/alarm_deactivated"
  	    />

	
</RelativeLayout>



